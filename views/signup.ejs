<% layout('./layouts/boilerplate.ejs') %>

<body class="min-h-screen bg-gray-100 dark:bg-gray-900 flex items-center 
justify-center px-4">

  <div class="w-full max-w-md bg-white dark:bg-gray-800 
  shadow-xl rounded-xl p-8">

    <!-- Title -->
    <h1 class="text-3xl font-bold text-center text-gray-800 dark:text-white mb-6">
      Sign Up
    </h1>

    <!-- Sign up form -->
    <form method="POST" action="/signup" class="flex flex-col space-y-4">

  <!-- Username -->
  <input
    type="text"
    name="username"
    placeholder="Enter Your Username"
    required
    class="px-4 py-2 border border-gray-300 
    dark:border-gray-600 bg-white dark:bg-gray-700 
    text-gray-800 dark:text-white rounded-md 
    focus:outline-none focus:ring-2 focus:ring-blue-500"
    value="<%= old ? old.username : '' %>"
  >
  <% if (err && err.username) { %>
    <p class="text-sm text-red-600"><%= err.username %></p>
  <% } %>

  <!-- Email -->
  <input
    type="email"
    name="email"
    placeholder="Enter Your Email"
    required
    class="px-4 py-2 border border-gray-300 
    dark:border-gray-600 bg-white dark:bg-gray-700 
    text-gray-800 dark:text-white rounded-md 
    focus:outline-none focus:ring-2 focus:ring-blue-500"
    value="<%= old ? old.email : '' %>"
  >
  <% if (err && err.email) { %>
    <p class="text-sm text-red-600"><%= err.email %></p>
  <% } %>

  <!-- Mobile -->
  <input
    type="tel"
    name="mobile"
    placeholder="Enter Your Mobile"
    required
    class="px-4 py-2 border border-gray-300 
    dark:border-gray-600 bg-white dark:bg-gray-700 
    text-gray-800 dark:text-white rounded-md 
    focus:outline-none focus:ring-2 focus:ring-blue-500"
    value="<%= old ? old.mobile : '' %>"
  >
  <% if (err && err.mobile) { %>
    <p class="text-sm text-red-600"><%= err.mobile %></p>
  <% } %>

  <!-- Password -->
  <input
    type="password"
    name="password"
    placeholder="Enter Your Password"
    required
    class="px-4 py-2 border border-gray-300 
    dark:border-gray-600 bg-white dark:bg-gray-700 
    text-gray-800 dark:text-white rounded-md 
    focus:outline-none focus:ring-2 focus:ring-blue-500"
    value="<%= old ? old.password : '' %>"
  >
  <% if (err && err.password) { %>
    <p class="text-sm text-red-600"><%= err.password %></p>
  <% } %>

  <!-- Submit -->
  <button
    type="submit"
    class="bg-green-600 text-white py-2 rounded-md hover:bg-green-700 transition"
  >
    Submit
  </button>
</form>


    <!-- Login link -->
    <p class="mt-6 text-center text-sm text-gray-600 dark:text-gray-300">
      Already have an account?
      <a href="/login" class="text-blue-600 dark:text-blue-400 hover:underline">Log in</a>
    </p>
  </div>
</body>
